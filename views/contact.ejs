    <div class="main">
      <div class="hamburger">
        <img class="ham" src="images/ham.png" alt="" width="23px">
        <img class="cross" src="images/cross.png" alt="" width="23px">
      </div>
      <div class="contactform">
        <h1>Contact me for work/general enquiries</h1>
        <form action="mailto:maazajaz1234@gmail.com" method="post" enctype="text/plain">
          <div class="mb-3">
            <label for="clientemail" class="form-label">Email address</label>
            <input type="email" class="form-control" id="clientemail" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">We'll never share your email and phone number with anyone else.</div>
          </div>
          <div class="mb-3">
            <label for="clientnumber" class="form-label">Phone no.</label>
            <input name="phone-no." type="phone" class="form-control" id="clientnumber">
          </div>
          <div class="mb-3">
            <label for="clientEnquiries" class="form-textarea">Enquirie</label>
            <textarea id="clientEnquiries" name="Enquiry" rows="4" cols="90"></textarea>
          </div>
          <div class="mb-3 form-check">
            <input name="work-with-me" type="checkbox" class="form-check-input" id="isclient">
            <label class="form-check-label" for="isclient">I want to work on a project with you</label>
          </div>
          <div class="buttons">
            <button type="submit" class="btn btn-dark">Submit</button>
          </div>

        </form>
      </div>
      <div class="footer-padding"></div>
