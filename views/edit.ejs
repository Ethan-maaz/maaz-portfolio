<%-include("partials/header")-%>

<div class="text">

  <h1>Edit <%=title%></h1>

  <form action="/edit/<%=title%>" method="post">

    <label for="composeText">Title</label>
    <input id="title" class="form-control title" type="text" name="title" placeholder="Enter your dairy's tilte here" value="<%=title%>"  autocomplete="off">

    <label for="postInput">Post</label>
    <textarea class="form-control blog" name="content" rows="4" cols="80" placeholder="Enter your dairy's content here" autocomplete="off"><%=content%>></textarea>

    <button type="submit" name="btn" class="btn btn-lg btn-dark">Edit</button>

  </form>

</div>

<%-include("partials/footer")-%>
